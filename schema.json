{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EnvConfig",
  "description": "Configuration for env-config-gen",
  "type": "object",
  "properties": {
    "target": {
      "type": "string",
      "description": "The path to the target .env file."
    },
    "overrideDescription": {
      "type": "boolean",
      "description": "Whether to override the description of existing variables in the target .env file.",
      "default": false
    },
    "variables": {
      "description": "The environment variables to be included in the .env file.",
      "oneOf": [
        {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EnvVariable"
          }
        },
        {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z_]+[a-zA-Z0-9_]*$": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "$ref": "#/definitions/EnvVariableObject"
                }
              ]
            }
          },
          "additionalProperties": false
        }
      ]
    }
  },
  "required": ["target", "variables"],
  "definitions": {
    "EnvVariable": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string",
          "pattern": "^[a-zA-Z_]+[a-zA-Z0-9_]*$"
        },
        "value": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["key", "value"]
    },
    "EnvVariableObject": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["value"]
    }
  }
}
